<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        app:cardBackgroundColor="@color/card_view_color"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginEnd="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/btn_search"
                android:src="@drawable/ic_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <EditText
                android:layout_toStartOf="@id/btn_search"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/edit_text"
                android:textColor="@color/white"
                android:shadowColor="@color/text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview"
        android:text="Lịch sử tìm kiếm"
        android:textColor="@color/text_color"
        android:layout_marginHorizontal="10dp">

    </TextView>

    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/flow_layout"
        android:layout_margin="5dp"
        android:layout_below="@id/history"
        app:flChildSpacing="auto"
        app:flChildSpacingForLastRow="align"
        app:flRowSpacing="8dp"
        app:flMaxRows="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.nex3z.flowlayout.FlowLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_below="@+id/flow_layout"
        android:weightSum="7"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_weight="3"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Spinner
                android:background="@drawable/gradient_dark_pink"
                android:id="@+id/spn_genre"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </Spinner>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_weight="3"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Spinner
                android:background="@drawable/gradient_dark_pink"
                android:id="@+id/spn_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </Spinner>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/btn_filter"
            android:layout_margin="5dp"
            android:src="@drawable/ic_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </ImageView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear"
        android:id="@+id/recycler">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>