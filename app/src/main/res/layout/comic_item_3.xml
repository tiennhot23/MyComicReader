<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    app:cardBackgroundColor="@color/background_color">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">
        <ImageView
            android:src="@drawable/gradient_dark_pink"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </ImageView>
        <ImageView
            android:alpha=".5"
            android:src="@drawable/gradient_imageview"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/card_view_color"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                android:id="@+id/thumb"
                android:layout_alignBottom="@id/linear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </ImageView>
            <LinearLayout
                android:layout_toEndOf="@+id/thumb"
                android:layout_toStartOf="@+id/thumb2"
                android:id="@+id/linear"
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:id="@+id/title_comic"
                    android:textSize="20sp"
                    android:text="TITLE"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:id="@+id/genres"
                    android:text="genres"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:layout_margin="5dp"
                        android:id="@+id/rating"
                        android:text="rating"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:textColor="@color/white"
                        android:layout_margin="5dp"
                        android:id="@+id/chapter"
                        android:layout_weight="1"
                        android:text="chapter"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:src="@drawable/ic_mark"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/thumb2"
                android:layout_alignBottom="@id/linear"
                android:layout_alignTop="@id/linear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </ImageView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>